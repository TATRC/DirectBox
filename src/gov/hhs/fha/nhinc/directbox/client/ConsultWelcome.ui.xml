<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.mainPanel {
			margin: 10px 10px 10px 10px;
		}
		
		.buttonPanel {
			background-color: #f5f5f5;
			margin-bottom: 10px;
			padding: 10px 5px 10px 5px;
		}
		
		.inputPanel {
			background-color: #F5F5F5;
			margin-bottom: 10px;
			padding: 10px 10px 10px 10px;
		}
		
		.inputSubPanel {
			padding: 0px 0px 25px 0px;
		}
		
		.inputDomainPanel {
			padding: 0px 15px 0px 0px;
		}
		
		.button {
			font-weight: bold;
			margin: 0px 5px 0px 5px;
		}
		
		.statusLabel {
			position: fixed;
			top: 0px;
			font-weight: bold;
			text-align: center;
			color: white;
			background: grey;
			text-decoration: blink;
			margin-left: auto;
			margin-right: auto;
			width: 100px;
		}
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Label ui:field="statusLabel" text="...working..."
			addStyleNames="{style.statusLabel}" />
		<div>
			<h1>Consult Referral</h1>
			<hr></hr>
		</div>
		<div class="{style.buttonPanel}">
			<g:Button ui:field="submitButton" text="Submit"
				addStyleNames="{style.button}" />
			<g:Button ui:field="cancelButton" text="Cancel"
				addStyleNames="{style.button}" />
		</div>
		<div class="{style.inputPanel}">
			<g:VerticalPanel>
				<g:VerticalPanel addStyleNames="{style.inputSubPanel}">
					<g:Label text="Choose the provider for referral:" />
					<g:ListBox ui:field="referToListBox" />
				</g:VerticalPanel>
				<g:VerticalPanel addStyleNames="{style.inputSubPanel}">
					<g:Label text="Choose the patient for referral:" />
					<g:ListBox ui:field="ptListBox" />
				</g:VerticalPanel>
				<g:VerticalPanel addStyleNames="{style.inputSubPanel}">
					<g:Label text="Choose the patient data domains to share (optional):" />
					<g:HorizontalPanel>
						<g:CheckBox ui:field="allergiesDomainBox" text="Allergies"
							addStyleNames="{style.inputDomainPanel}" />
						<g:CheckBox ui:field="medsDomainBox" text="Medications"
							addStyleNames="{style.inputDomainPanel}" />
						<g:CheckBox ui:field="labsDomainBox" text="Labs"
							addStyleNames="{style.inputDomainPanel}" />
						<g:CheckBox ui:field="procsDomainBox" text="Procedures"
							addStyleNames="{style.inputDomainPanel}" />
						<g:CheckBox ui:field="vitalsDomainBox" text="Vitals"
							addStyleNames="{style.inputDomainPanel}" />
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 