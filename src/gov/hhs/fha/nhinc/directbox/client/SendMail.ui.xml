<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.mainPanel {
			margin: 10px 10px 10px 10px;
		}
				
		.buttonPanel {
			background-color: #f5f5f5;
			margin-bottom: 10px;
			padding: 10px 5px 10px 5px;
		}
		
		.inputPanel {
			background-color: #F5F5F5;
			margin-bottom: 10px;
			padding: 10px 10px 10px 10px;
		}
		
		.button {
			font-weight: bold;
			margin: 0px 5px 0px 5px;
		}
		
		.attachLabel {
			font-style:italic;
			margin: 0px 5px 0px 5px;
		}
		
		.statusLabel {
			position: fixed;
			top: 0px;
			font-weight: bold;
			text-align:center;
			color: white;
			background: grey;
			text-decoration: blink;
			margin-left: auto;
			margin-right: auto;
			width: 100px;
		}
				
		.headerTable {
			width: 100%;
			margin-botton: 10px;
		}
		
		.headerLabel {
			font-weight: bold;
			color: dimgray;
		}
		
		.subjBox {
			width: 100%;
		}
		
		.dataArea {
			width: 100%;
		}
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<div>
			<h1>Consult Referral - finalize message</h1>
			<hr></hr>
		</div>
		<div class="{style.buttonPanel}">
			<g:HorizontalPanel>
				<g:Button ui:field="sendButton" text="Send" addStyleNames="{style.button}" />
				<g:Button ui:field="discardButton" text="Discard" addStyleNames="{style.button}" />
				<g:Label ui:field="statusLabel" text="...working..."
					addStyleNames="{style.statusLabel}" />
			</g:HorizontalPanel>
		</div>
		<div class="{style.inputPanel}">
			<table class="{style.headerTable}">
				<tr>
					<td class="{style.headerLabel}">From:</td>
					<td>
						<g:Label ui:field="fromLabel" />
					</td>
				</tr>
				<tr>
					<td class="{style.headerLabel}">To:</td>
					<td>
						<g:Label ui:field="toLabel" />
					</td>
				</tr>
				<tr>
					<td class="{style.headerLabel}">Subject:</td>
					<td>
						<div>
							<g:TextBox ui:field="subjTextBox" addStyleNames="{style.subjBox}" />
						</div>
					</td>
				</tr>
				<tr>
					<td class="{style.headerLabel}"> </td>
					<td>
						<div>
							<g:Button ui:field="attachButton" text="Attachments..." addStyleNames="{style.button}" />
							<g:Label ui:field="attachLabel" addStyleNames="{style.attachLabel}" />
						</div>
					</td>
				</tr>
			</table>
			<div width="100%">
			    <g:Grid ui:field="dataTextGrid" addStyleNames="{style.dataArea}" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 