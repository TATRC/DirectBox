<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>
		.mainPanel {
			margin: 10px 10px 10px 10px;
		}
		
		.topPanel {
			width: 100%
		}

		.buttonPanel {
			background-color: #f5f5f5;
			margin-bottom: 10px;
			padding: 10px 5px 10px 5px;
			width: 100%
		}
		
		.mailboxPanel {
			padding: 10px 10px 10px 10px;
		}
		
		.button {
			font-weight: bold;
			margin: 0px 5px 0px 5px;
		}
		
		.statusLabel {
			position: fixed;
			top: 0px;
			font-weight: bold;
			text-align:center;
			color: white;
			background: grey;
			text-decoration: blink;
			margin-left: auto;
			margin-right: auto;
			width: 100px;
		}

		.attachmentPanel {
			background-color: #f5f5f5;
			margin-bottom: 10px;
			padding: 10px 5px 10px 5px;
			width: 100%;
		}
		
	</ui:style>
	<g:DockLayoutPanel>
		<g:north size='80'>
			<g:VerticalPanel addStyleNames="{style.topPanel}">
				<g:Label ui:field="statusLabel" text="...working..."
					addStyleNames="{style.statusLabel}" />
			<g:HorizontalPanel addStyleNames="{style.buttonPanel}">
			    <!--  Hide until we fix sent folder store issue -->
			    <g:ListBox ui:field="folderListBox" visible="false" addStyleNames="{style.button}" />
				<g:Button ui:field="refreshButton" text="Refresh"
					addStyleNames="{style.button}" />
				<g:Button ui:field="createConsultButton" text="Create Consult"
					addStyleNames="{style.button}" />
				<g:Button ui:field="deleteButton" text="Delete"
					addStyleNames="{style.button}" />
			</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:north>
		<g:center>
			<g:SplitLayoutPanel addStyleNames="{style.mailboxPanel}">
				<g:north size='150'>
					<c:DataGrid ui:field="itemTable" />
				</g:north>
				<g:center>
					<g:ScrollPanel>
						<g:VerticalPanel width="100%">
							<g:HorizontalPanel ui:field="attachmentPanel" visible="false" addStyleNames="{style.attachmentPanel}"/>
							<g:HTML ui:field="itemHTML" />
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>
